<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentCreamLight"
    tools:context="com.dfa.virginiatech.activt.EventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_header_height"
        android:background="@color/colorAccentSecondary"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/event_date"
            android:text="Test Date"
            android:textSize="@dimen/event_info_text_size"
            android:textColor="@color/eventDateTextColor"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical" />
        <TextView
            android:id="@+id/event_time"
            android:text="4:00pm"
            android:textSize="@dimen/event_info_text_size"
            android:textColor="@color/eventDateTextColor"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_name"
        android:text="BODYPUMP"
        android:textSize="@dimen/large_text"
        android:textColor="@color/colorDarkText"
        android:background="@color/colorAccentCreamLight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_header_height"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/event_description"
        android:text="Test description please ignore "
        android:background="@color/colorAccentCreamDark"
        android:elevation="@dimen/height"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/event_location"
        android:text="War Memorial Gym: Dance Room"
        android:background="@color/colorAccentCreamDark"
        android:elevation="@dimen/height"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_description"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/add_event"
        android:text="@string/add_event"
        android:onClick="onAddEvent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
